# View data based on current format
.PHONY: view-data
view-data:
	@if [ ! -f "$(DATA_FILE)" ]; then \
		echo "$(RED)‚ùå $(DATA_FILE) not found!$(NC)"; \
		echo "$(YELLOW)üí° Run 'make generate-data FORMAT=$(FORMAT)' first$(NC)"; \
		exit 1; \
	fi
	@echo "$(CYAN)$(FLAG) Sample $(DESCRIPTION) data from $(DATA_FILE):$(NC)"
	@head -n 4 $(DATA_FILE) | $(PYTHON) -c "import csv, sys; reader = csv.DictReader(sys.stdin); [print(f'$(BLUE)Record {i+1} ($(DESCRIPTION)):$(NC)') or [print(f'  {k}: {v}') for k, v in list(row.items())[:8]] or print() for i, row in enumerate(list(reader)[:2])]"

.PHONY: view-ektp
view-ektp:
	@if [ ! -f "$(EKTP_DATA)" ]; then \
		echo "$(RED)‚ùå $(EKTP_DATA) not found!$(NC)"; \
		echo "$(YELLOW)üí° Run 'make ektp' first$(NC)"; \
		exit 1; \
	fi
	@echo "$(CYAN)üÜî Sample e-KTP data from $(EKTP_DATA):$(NC)"
	@head -n 4 $(EKTP_DATA) | $(PYTHON) -c "import csv, sys; reader = csv.DictReader(sys.stdin); [print(f'$(BLUE)e-KTP Record {i+1}:$(NC)') or [print(f'  {k}: {v}') for k, v in list(row.items())[:10]] or print() for i, row in enumerate(list(reader)[:2])]"

# Clean specific format or all
.PHONY: clean
clean:
	@echo "$(CYAN)üßπ Cleaning $(DESCRIPTION) files...$(NC)"
	@[ -f "$(DATA_FILE)" ] && rm -f $(DATA_FILE) && echo "$(YELLOW)üóëÔ∏è  Removed: $(DATA_FILE)$(NC)" || true
	@[ -d "$(PDF_FOLDER)" ] && rm -rf $(PDF_FOLDER) && echo "$(YELLOW)üóëÔ∏è  Removed: $(PDF_FOLDER)/$(NC)" || true
	@if [ "$(FORMAT)" = "indonesian" ]; then \
		[ -f "$(EKTP_DATA)" ] && rm -f $(EKTP_DATA) && echo "$(YELLOW)üóëÔ∏è  Removed: $(EKTP_DATA)$(NC)" || true; \
		[ -f "$(VALIDATION_REPORT)" ] && rm -f $(VALIDATION_REPORT) && echo "$(YELLOW)üóëÔ∏è  Removed: $(VALIDATION_REPORT)$(NC)" || true; \
	fi
	@[ -f "*.pyc" ] && rm -f *.pyc || true
	@[ -d "__pycache__" ] && rm -rf __pycache__ || true
	@echo "$(GREEN)‚úÖ $(DESCRIPTION) cleanup complete!$(NC)"

.PHONY: clean-all
clean-all:
	@echo "$(CYAN)üßπ Cleaning all formats + e-KTP...$(NC)"
	@rm -f indonesian_job_applications.csv realistic_job_applications.csv
	@rm -f $(EKTP_DATA) $(VALIDATION_REPORT)
	@rm -rf indonesian_pdf_forms professional_pdf_forms
	@rm -f *.pyc
	@rm -rf __pycache__ $(VENV_NAME) backup_*
	@echo "$(GREEN)‚úÖ Complete cleanup finished!$(NC)"

# Test all formats including e-KTP
.PHONY: test
test:
	@echo "$(CYAN)üß™ Testing multi-format + e-KTP capabilities...$(NC)"
	@$(PYTHON) -c "from faker import Faker; print('üáÆüá© Indonesian test:', Faker('id_ID').name(), '|', Faker('id_ID').city()); print('üåç Global test:', Faker('en_US').name(), '|', Faker('en_US').city())"
	@$(PYTHON) -c "import json; print('‚úÖ JSON processing works')"
	@echo "$(GREEN)‚úÖ All tests passed!$(NC)"

.PHONY: ktp-images
ktp-images:
	@echo "$(CYAN)üñºÔ∏è  Generating KTP images for each CSV record...$(NC)"
	@if [ ! -f "generate_ektp_images_from_csv.py" ]; then \
		echo "$(RED)‚ùå generate_ektp_images_from_csv.py not found!$(NC)"; \
		exit 1; \
	fi
	@if [ ! -f "indonesian_job_applications.csv" ]; then \
		echo "$(RED)‚ùå indonesian_job_applications.csv not found! Run 'make ektp' first.$(NC)"; \
		exit 1; \
	fi
	@if [ ! -f "src/images.jpg" ]; then \
		echo "$(YELLOW)‚ö†Ô∏è  src/photo.jpg (static photo) not found. Please add a sample photo.$(NC)"; \
		exit 1; \
	fi
	@python3 generate_ektp_images_from_csv.py
	@echo "$(GREEN)‚úÖ All KTP images saved in ./results/$(NC)"